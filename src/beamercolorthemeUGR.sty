\ProvidesPackage{beamercolorthemeUGR}

\mode<presentation>



% UGR's official color: pantone-179 -- best-suited for printed media
\definecolor{ugr-red}{HTML}{FF360F} 

% A darker version of pantone-179 -- best-suited for screen media
\colorlet{ugr-red-darker}{ugr-red!90!black} 

% Colors for different color-boxes
\definecolor{YellowGreenDark}{HTML}{B1C63A}
\definecolor{YellowGreenLight}{HTML}{F0F9C2}
\definecolor{YellowOrangeLight}{HTML}{FFF2E4}


%----------------------------------------------------------
% The theme's main color
%----------------------------------------------------------
%\colorlet{main-color}{ugr-red}
\colorlet{main-color}{ugr-red-darker}



% Set theme's colors
\usecolortheme{whale}
\usecolortheme{orchid}
\usecolortheme[named=main-color]{structure} %replaces the blue of Copenhagen with Pacific orange

% Primary, secondary and tertiary palettes
\setbeamercolor*{palette primary}{use=structure,fg=structure.fg,bg=white}
\setbeamercolor*{palette secondary}{use=structure,fg=white,bg=structure.fg!90!black}
\setbeamercolor*{palette tertiary}{use=structure,fg=white,bg=structure.fg!60!black}

% Common-use slide colors
\setbeamercolor{normal text}{fg=black!85}
\setbeamercolor{alerted text}{fg=main-color}
\setbeamercolor{title in head/foot}{fg=black!85,bg=structure.bg}
\setbeamercolor{logo in head/foot}{fg=black!85,bg=structure.bg}
\setbeamercolor{author in head/foot}{fg=main-color,bg=structure.bg}
\setbeamercolor{page number in head/foot}{fg=black!85,bg=structure.bg}

% Titlepage colors
\setbeamercolor{title}{fg=white,bg=main-color}
\setbeamercolor{subtitle}{fg=black!85}
\setbeamercolor{authortitle}{fg=black!85}
\setbeamercolor{author}{fg=main-color}
\setbeamercolor{advisortitle}{fg=black!85}
\setbeamercolor{advisor}{fg=main-color}
\setbeamercolor{institute}{fg=black!85}
\setbeamercolor{date}{fg=black!85}



\mode
<all>
